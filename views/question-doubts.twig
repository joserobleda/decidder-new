<div class="modal m">
	<h5 id="heading">User questions</h5>
	<section>
		<div id="doubts">
			{% for doubt in doubts %}
				<div class="row doubt slideEffect" data-target="#responseDoubt" data-value="{{ doubt._id }}" data-text="{{ doubt.text }}" data-tohide="#doubts" data-addtext="#doubtText">
					<div class="ten columns">
	                	<h3> {{ doubt.text }} </h3>
					</div>
					<div class="two columns">
						<i class="ic" data-icon="&#61469;"></i>
					</div>
				</div>
			{% endfor %}
		</div>

		<div id="responseDoubt" style="width:100%;display:none">
			<form id="new-response-doubt" method="post" action="/question/{{ question._id }}/doubt/">
				<h3 id="doubtText"></h3>
            	<textarea name="text" placeholder="Write your response here" required rows="5"></textarea>
				<div class="clearfix">
					<button class="green right s" type="submit">Send</button>
					<button class="red left s close-reveal-modal" type="reset">Cancel</button>
				</div>
			 </form>
       	</div>
	</section>
</div>