
	<h5 id="heading">Send a new response</h5>
	<section>
		{% if fixedTitle %}
			<input type="hidden" name="title" value="{{ fixedTitle }}" />
			<input type="text" name="title" value="{{ fixedTitle }}" disabled tabindex="1"/>
		{% else %}
			{% if predefinedresponses != "" %}
				<div class="select">
					<select name="title" required tabindex="1">
						<option value="">Select one option</option>		
						{% for text in predefinedresponses %}
							<option value="{{text}}">{{text}}</option>
						{% endfor %}
						{% for responsePredefined in responses %}
							<option value="{{ responsePredefined.title }}">{{ responsePredefined.title }}</option>
						{% endfor %}
					</select>
				</div>
	        {% else %}
				<input type="text" name="title" placeholder="Response" required pattern="^\S(.*)" tabindex="1" />
			{% endif %}
		{% endif %}

		<textarea name="argument" placeholder="Write your argument here" required rows="5" tabindex="2"></textarea>

		<div class="text-right">
			<button class="red s close-reveal-modal" type="reset" tabindex="4">Cancel</button>
			<button class="green s" type="submit" tabindex="3">Send</button>
		</div>		
	</section>