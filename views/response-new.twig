
	<h5 id="heading">Send a new response</h5>
	<section>
		{% if fixedTitle %}
			<input type="text" name="title" value="{{ fixedTitle }}" disabled />
		{% else %}
			{% if predefinedresponses %}
				<div class="select">
					<select name="title" required>
						<option value="">Select one option</option>		
						{% for text in predefinedresponses %}
							<option value="{{text}}">{{text}}</option>
						{% endfor %}
					</select>
				</div>
	        {% else %}
				<input type="text" name="title" placeholder="Response" required />
			{% endif %}
		{% endif %}

		<textarea name="argument" placeholder="Write your argument here" required rows="5"></textarea>

		<div class="clearfix">
			<button class="green right s" type="submit">Send</button>
			<button class="red left s close-reveal-modal" type="reset">Cancel</button>
		</div>		
	</section>